{
  "version": 2,
  "public": true,
  "github": {
    "silent": true
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/login",
      "destination": "/public/login.html"
    },
    {
      "source": "/chat",
      "destination": "/public/chat.html"
    },
    {
      "source": "/admin",
      "destination": "/public/admin.html"
    },
    {
      "source": "/dashboard",
      "destination": "/public/dashboard.html"
    },
    {
      "source": "/chat-detail",
      "destination": "/public/chat-detail.html"
    },
    {
      "source": "/analytics",
      "destination": "/public/analytics.html"
    },
    {
      "source": "/css/:path*",
      "destination": "/public/css/:path*"
    },
    {
      "source": "/js/:path*",
      "destination": "/public/js/:path*"
    },
    {
      "source": "/img/:path*",
      "destination": "/public/img/:path*"
    },
    {
      "source": "/data/:path*",
      "destination": "/public/data/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/login.html",
      "destination": "/login",
      "permanent": true
    },
    {
      "source": "/chat.html",
      "destination": "/chat",
      "permanent": true
    },
    {
      "source": "/admin.html",
      "destination": "/admin",
      "permanent": true
    },
    {
      "source": "/dashboard.html",
      "destination": "/dashboard",
      "permanent": true
    },
    {
      "source": "/chat-detail.html",
      "destination": "/chat-detail",
      "permanent": true
    },
    {
      "source": "/analytics.html",
      "destination": "/analytics",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
