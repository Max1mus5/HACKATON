{
  "version": 2,
  "public": true,
  "github": {
    "silent": true
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/login",
      "destination": "/public/login.html"
    },
    {
      "source": "/chat",
      "destination": "/public/chat.html"
    },
    {
      "source": "/admin",
      "destination": "/public/admin.html"
    },
    {
      "source": "/dashboard",
      "destination": "/public/dashboard.html"
    },
    {
      "source": "/chat-detail",
      "destination": "/public/chat-detail.html"
    },
    {
      "source": "/analytics",
      "destination": "/public/analytics.html"
    },
    {
      "source": "/css/:path*",
      "destination": "/public/css/:path*"
    },
    {
      "source": "/js/:path*",
      "destination": "/public/js/:path*"
    },
    {
      "source": "/img/:path*",
      "destination": "/public/img/:path*"
    },
    {
      "source": "/data/:path*",
      "destination": "/public/data/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/sentiment/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/analytics/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/usuarios/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/config/:path*",
      "destination": "/api/index"
    }
  ],
  "redirects": [
    {
      "source": "/login.html",
      "destination": "/login",
      "permanent": true
    },
    {
      "source": "/chat.html",
      "destination": "/chat",
      "permanent": true
    },
    {
      "source": "/admin.html",
      "destination": "/admin",
      "permanent": true
    },
    {
      "source": "/dashboard.html",
      "destination": "/dashboard",
      "permanent": true
    },
    {
      "source": "/chat-detail.html",
      "destination": "/chat-detail",
      "permanent": true
    },
    {
      "source": "/analytics.html",
      "destination": "/analytics",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.9",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "GEMINI_API_KEY": "AIzaSyCrzdwv-viQnqcFnc7PBAimEzyDMf4dXY0",
    "TRANSFORMERS_CACHE": "/tmp/transformers_cache"
  },
  "cleanUrls": true,
  "trailingSlash": false
}
